---
import SecondaryLayout from '@/layouts/SecondaryLayout.astro';
import { projects } from '@/data';
import { ProjectCard } from '@/components';
---

<SecondaryLayout title="Proyectos">
  <section
    id="projects"
    class="flex items-center px-6 py-24"
    aria-labelledby="projects-heading"
  >
    <div class="mx-auto max-w-7xl">
      <h2
        id="projects-heading"
        class="text-3xl font-bold text-center text-gray-800 mb-6"
      >
        Proyectos
      </h2>

      <p class="text-center text-gray-600 max-w-3xl mx-auto mb-12 text-lg">
        Comenzamos nuestra trayectoria con una visión clara: unir creatividad y
        tecnología para construir experiencias digitales únicas.
      </p>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {projects.map((p) => <ProjectCard project={p} />)}
      </div>
    </div>
  </section>
</SecondaryLayout>
