---
import { services } from '@/data';
import ServiceCard from './ServiceCard.astro';
---

<section
  id="services"
  class="py-20 px-6 bg-gray-50"
  aria-labelledby="services-heading"
>
  <div class="mx-auto max-w-7xl">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Servicios</h2>
    <p class="text-center text-gray-600 max-w-3xl mx-auto mb-12 text-lg">
      Ofrecemos soluciones digitales a medida que se adaptan a las necesidades
      de cada cliente.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {services.slice(0, 3).map((s) => <ServiceCard service={s} />)}
    </div>

    <div class="mt-12 text-center">
      <a
        href="/services"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition"
      >
        Ver m√°s servicios
      </a>
    </div>
  </div>
</section>
