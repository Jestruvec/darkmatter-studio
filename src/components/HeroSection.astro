---
import { TesseractScene } from '@/components/TesseractScene';
---

<section
  id="hero"
  aria-labelledby="hero-heading"
  class="relative flex items-center h-[calc(100dvh-4rem)] px-8"
>
  <div class="text-center mx-auto max-w-2xl flex flex-col gap-6">
    <h1 id="hero-heading" class="text-5xl font-bold">
      Desarrollo Web Profesional
      <span class="hidden md:inline"> para tu Negocio </span>
    </h1>
    <p class="text-2xl font-semibold">
      Creamos sitios web rápidos, modernos y personalizados
      <span class="hidden md:inline">
        : landing pages, tiendas en línea, plataformas administrativas y más.
      </span>
    </p>

    <div>
      <a
        href="#contact"
        aria-label="Ir a la sección de contacto"
        class="inline-block px-6 py-3 bg-blue-900 text-white font-semibold rounded-lg hover:bg-blue-800 transition"
      >
        Contáctanos
      </a>
    </div>
  </div>

  <div class="absolute bottom-0 left-0 right-0 top-16 -z-10">
    <TesseractScene client:only="react" />
  </div>
</section>
